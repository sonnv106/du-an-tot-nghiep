html
  head
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous")
  body
    if errors
      each error in errors
        .alert.alert-danger= error
    .container-fluid.mt-5.d-flex.justify-content-center
        div(style='width: 20%').justify-content-center.align-items-center
          h2.text-center Đăng nhập
          form(method="POST" action='/login').justify-content-center.align-items-center
            .form-group
              label(for="email").mt-5 Email
              input#email.form-control(type="text", name="email", value = values ? values.email : "")
            .form-group
              label(for="password").mt-2 Password
              input#password.form-control(type="password", name="password", value = values ? values.password : "")
            button.btn.btn-primary.mt-4(style='width: 100%') Đăng nhập
       
