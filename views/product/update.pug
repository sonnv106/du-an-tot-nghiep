extends ../../layouts/navbar-home.pug
block content
  h2 Cập nhật thông tin sản phẩm
  if errors
    each error in errors
      .alert.alert-danger= error
  form(method="POST" enctype="multipart/form-data")
    .form-group
      label(for="name") Tên sản phẩm
      input#name.form-control(type="text", name="name", value = product.name ? product.name : "")
    .form-group
      label(for="packaging") Quy cách
      input#packaging.form-control(type="text", name="packaging", value = product.packaging ? product.packaging : "")
    .form-group
      label(for="import_price") Giá nhập
      input#import_price(type="text", name="import_price", value = product.import_price ? product.import_price : "")
      label(for="price") Giá bán
      input#price(type="text", name="price", value =  product.price ? product.price : "")    
    .form-group
      label(for="image") Ảnh minh họa
      input#image.form-control(type="file", name="image" accept='image/*' multiple)
    .form-group
      label(for="quantily") Số lượng
      input#quantily.form-control(type="text", name="quantily", value = product.quantily ? product.quantily : "")
    .form-group
      label(for="ingredients") Thành phần
      input#ingredients.form-control(type="text", name="ingredients", value = product.ingredients ? product.ingredients : "")
    .form-group
      label(for="weight") Khối lượng tịnh
      input#weight.form-control(type="text", name="weight", value = product.weight ? product.weight : "")
    .form-group
      label(for="date") Hạn sử dụng
      input#date.form-control(type="text", name="date", value = product.date ? product.date : "")
    .form-group
      label(for="preserve") Bảo quản
      input#preserve.form-control(type="text", name="preserve", value = product.preserve ? product.preserve : "")
    .form-group
      label(for="source") Nguồn hàng
      input#source.form-control(type="text", name="source", value = product.source ? product.source : "")
    .form-group
      label(for="certificate") Chứng chỉ
      input#certificate.form-control(type="text", name="certificate", value = product.certificate ? product.certificate : "")
    .form-group
      label(for="warning") Cảnh báo
      input#warning.form-control(type="text", name="warning", value = product.warning ? product.warning : "")
    .form-group
      label(for="origin") Xuất xứ
      input#origin.form-control(type="text", name="origin", value = product.origin ? product.origin : "")
    .form-group
      label(for="detail") Chi tiết
      input#detail.form-control(type="text", name="detail", value = product.detail ? product.detail : "")
    
      label(for="category") Danh mục
    select.form-select(aria-label='Default select example' name='category')
      each category in categories
        option(value = category.name)= category.name
    
    button.btn.btn-primary.mt-1 Cập nhật
