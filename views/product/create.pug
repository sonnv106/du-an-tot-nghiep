extends ../../layouts/navbar-home.pug
block content
  h1 Thêm sản phẩm
  if errors
    each error in errors
      .alert.alert-danger= error
  form(method="POST" enctype="multipart/form-data" action='/products/create' )
    .form-group
      label(for="name") Tên sản phẩm
      input#name.form-control(type="text", name="name", value = values ? values.name : "")
    .form-group
      label(for="image") Ảnh minh họa
      input#image.form-control(type="file", name="image" accept='image/*' multiple)
    .form-group
      label(for="ingredients") Thành phần
      input#ingredients.form-control(type="text", name="ingredients", value = values ? values.ingredients : "")
    .form-group
      label(for="preserve") Bảo quản
      input#preserve.form-control(type="text", name="preserve", value = values ? values.preserve : "")
    .form-group
      label(for="source") Nguồn hàng
      input#source.form-control(type="text", name="source", value = values ? values.source : "")
    .form-group
      label(for="certificate") Chứng chỉ
      input#certificate.form-control(type="text", name="certificate", value = values ? values.certificate : "")
    .form-group
      label(for="warning") Cảnh báo
      input#warning.form-control(type="text", name="warning", value = values ? values.warning : "")
    .form-group
      label(for="origin") Xuất xứ
      input#origin.form-control(type="text", name="origin", value = values ? values.origin : "")
    .form-group
      label(for="detail") Chi tiết
      input#detail.form-control(type="text", name="detail", value = values ? values.detail : "")
    
      label(for="category") Danh mục
    select.form-select(aria-label='Default select example' name='category')
      each category in categories
        option(value = category.name)= category.name
    
    button.btn.btn-primary.mt-1 Thêm
