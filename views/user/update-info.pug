extends ../../layouts/navbar-home
block content
 
  h2 Cập nhật thông tin người dùng
  div.d-flex
    h6.me-5 Email: 
    h6= user.email  
  if errors
      each error in errors
        .alert.alert-danger= error
  form(method="POST" enctype="multipart/form-data")
    .form-group
      label(for="name") Tên
      input#name.form-control(type="text", name="name", value =  user.name? user.name : '')
    .form-group
      label(for="phone") Phone
      input#phone.form-control(type="text", name="phone", value = user.phone ? user.phone : '')
    .form-group
      label(for="address") Địa chỉ
      input#address.form-control(type="text", name="address", value = user.address ? user.address : "")
    .form-group
      label(for="avatar") Ảnh
      input#avatar.form-control(type="file", name="avatar")
    button.btn.btn-primary.mt-1 Create